<Window x:Class="Linn.Songcast.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Software Update" Height="162" Width="656" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closed="Window_Closed" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <StackPanel Name="stackPanel1" VerticalAlignment="Top">
        <TextBlock HorizontalAlignment="Center" Name="textBlock" Text="TextBlock" VerticalAlignment="Top" Margin="0,20,0,15" />
        <ProgressBar Height="20" HorizontalAlignment="Stretch" Name="progressBar" VerticalAlignment="Top" Margin="20,0,20,20" SnapsToDevicePixels="True" />
        <DockPanel Name="dockPanel1" LastChildFill="False">
            <Button Content="Details" Height="23" Name="buttonDetails" Width="75" Margin="20,0,0,0" Click="buttonDetails_Click" />
            <Button Content="Install" Height="23" Name="buttonUpdate" Width="75" DockPanel.Dock="Right" Margin="5,0,20,0" Click="buttonUpdate_Click" />
            <Button Content="Cancel" Height="23" Name="buttonClose" Width="75" DockPanel.Dock="Right" Margin="0,0,5,0" Click="buttonClose_Click" />
        </DockPanel>
    </StackPanel>
</Window>
