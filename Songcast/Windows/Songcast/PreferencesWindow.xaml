        <DockPanel>
            <CheckBox Content="Show Linn Songcast in the menu bar" Height="16" Margin="10,10,0,0" Name="checkBox1" Width="352" Checked="checkBox1_Checked" Unchecked="checkBox1_Unchecked" IsChecked="True" />
            <Button Content="Close" Height="23" Name="button3" Width="75" Click="button3_Click" Margin="8,5,10,0" DockPanel.Dock="Right" HorizontalAlignment="Right" />
            <Button Content="Help" Height="23" Name="button6" Width="75" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,5,0,0" Click="buttonHelp_Click" />
        </DockPanel>
    </StackPanel>
</Window>
