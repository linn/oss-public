<UserControl x:Class="SilverlightConfig.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <Button Name="ButtonPlay" Content="Play" Click="ButtonPlayClick"></Button>
            <Button Name="ButtonPause" Content="Pause" Click="ButtonPauseClick"></Button>
            <Button Name="ButtonStop" Content="Stop" Click="ButtonStopClick"></Button>
        </StackPanel>
    </Grid>
</UserControl>
