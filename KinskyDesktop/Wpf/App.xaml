                <ResourceDictionary Source="ListBox.xaml" />
                <ResourceDictionary Source="TileViewStyle.xaml" />
                <ResourceDictionary Source="WindowChromeStyle.xaml" />
                <ResourceDictionary Source="MenuItem.xaml" />
